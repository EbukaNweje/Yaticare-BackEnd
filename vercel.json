{
  "name": "Yaticare-Backend",

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],

  "cron": [
    {
      "path": "/api/daily-interest",
      "schedule": "*/5 * * * *"
    }
  ]
}
